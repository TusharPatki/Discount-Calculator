{
    "manifest_version": 3,
    "name": "Discount Aggregator",
    "description": "Aggregate discounts from multiple banks for a single product.",
    "version": "1.0",
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
  
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
  